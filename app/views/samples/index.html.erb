<h1>Listing samples</h1>

<table>
  <tr>
    <th>Location</th>
    <th>Chloroform</th>
    <th>Bromoform</th>
    <th>Chlorodibromide</th>
    <th>Dichlorobromide</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @samples.each do |sample| %>
<tr>
	
    <td><%= sample.location %></td>
    <td><%= sample.chloroform %></td>
    <td><%= sample.bromoform %></td>
    <td><%= sample.chlorodibromide %></td>
    <td><%= sample.dichlorobromide %></td>
    <td><%= link_to 'Show', sample %></td>
    <td><%= link_to 'Edit', edit_sample_path(sample) %></td>
	<td><%= link_to 'Test', sample_test_path(sample) %></td>
    <td><%= link_to 'Destroy', sample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

